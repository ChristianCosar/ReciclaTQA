<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="2dp"
        card_view:cardPreventCornerOverlap="true"
        card_view:cardElevation="2dp"
        android:layout_marginBottom="2dp"
        card_view:cardUseCompatPadding="true"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardBackgroundColor="@color/white">
    <RelativeLayout
        android:id="@+id/corner_card"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:background="@drawable/triangle_shape"
        android:layout_height="wrap_content">
        <TextView
            android:text="R"
            android:id="@+id/tv_type_company"
            android:padding="5dp"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="top|right"
            android:layout_width="50dp"
            android:layout_height="60dp" />


    </RelativeLayout>
       <LinearLayout
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
               android:padding="0dp"
               android:layout_marginLeft="5dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/primary_text"
               android:text="@string/name_company"
               android:textSize="@dimen/primary_text"
               android:textStyle="bold"
               android:id="@+id/tv_name_company" />
           <TextView
               android:padding="0dp"
               android:layout_marginLeft="5dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/secondary_text"
               android:text="@string/addres_company"
               android:textSize="14dp"
               android:id="@+id/tv_detail_company" />
           <View
               android:layout_width="match_parent"
               android:layout_marginLeft="5dp"
               android:layout_marginRight="5dp"
               android:layout_marginTop="3dp"
               android:layout_height="1dp"
               android:background="@color/primary_light"/>
        <FrameLayout
            android:background="@color/white"
            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Reciclamos"
                    android:id="@+id/tv_we_recycle"
                    android:textColor="@color/primary_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <android.support.v7.widget.RecyclerView
                    android:layout_gravity="center"
                    android:id="@+id/list_item_recycling"
                    android:layout_width="80dp"
                    android:orientation="horizontal"
                    android:layout_height="90dp">
                </android.support.v7.widget.RecyclerView>
            </LinearLayout>

        <RelativeLayout
            android:layout_gravity="center_horizontal"
            android:background="@drawable/rectangle_image_white"
            android:layout_width="120dp"
            android:layout_height="107dp">
            android:background="@drawable/border_imageview"

            <ImageView
                android:layout_width="119dp"
                android:layout_height="106dp"
                android:scaleType="centerCrop"
                android:id="@+id/logo_company"
                android:adjustViewBounds="true"
                android:layout_centerInParent="true"
                 />
        </RelativeLayout>


            <LinearLayout
                android:layout_gravity="right|bottom"
                android:orientation="vertical"
                android:layout_width="100dp"
                android:layout_height="110dp">
                <FrameLayout

                    android:layout_width="100dp"
                    android:layout_height="110dp">
                    <LinearLayout
                        android:layout_marginLeft="0dp"
                        android:gravity="bottom"
                        android:layout_gravity="top|center_horizontal"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="0dp"
                            android:textSize="@dimen/secondary_text"
                            android:text="Verificado Reciclapp "
                            android:id="@+id/tv_aprobed_reciclapp"
                            android:padding="0dp"
                            android:gravity="center"
                            android:textColor="@color/text_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <ImageView
                            android:padding="0dp"
                            android:layout_gravity="center"
                            android:visibility="gone"
                            android:id="@+id/iv_reciclapp_aprobed"
                            android:background="@drawable/circle_image_green"
                            android:layout_centerInParent="true"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ic_action_tick"
                            android:layout_width="30dp"
                            android:layout_height="30dp" />


                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginLeft="19dp"
                        android:gravity="bottom"
                        android:layout_gravity="bottom"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginLeft="4dp"
                            android:layout_marginTop="2dp"
                            android:textSize="@dimen/primary_text"
                            android:text="2949"
                            android:id="@+id/tv_num_likes"
                            android:padding="2dp"
                            android:textStyle="bold"
                            android:textColor="@color/text_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <ImageView
                            android:layout_marginLeft="2dp"
                            android:padding="0dp"
                            android:background="@drawable/circle_image_green"
                            android:layout_centerInParent="true"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ic_action_heart_red"
                            android:layout_width="30dp"
                            android:layout_height="30dp" />


                    </LinearLayout>

                </FrameLayout>




            </LinearLayout>
        </FrameLayout>



       </LinearLayout>

</android.support.v7.widget.CardView>
