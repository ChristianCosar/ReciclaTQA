<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="2dp"
        card_view:cardPreventCornerOverlap="true"
        card_view:cardElevation="2dp"
        android:padding="0dp"
        android:layout_marginBottom="0dp"
        card_view:cardUseCompatPadding="true"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardBackgroundColor="@color/white">
        <RelativeLayout
            android:id="@+id/corner_card"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:background="@drawable/triangle_shape"
            android:layout_height="wrap_content">
            <TextView
                android:text="R"
                android:id="@+id/tv_type_company"
                android:padding="5dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="top|right"
                android:layout_width="50dp"
                android:layout_height="60dp" />


        </RelativeLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp">

            <LinearLayout
                android:orientation="horizontal"
                android:padding="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/rectangle_image_white"
                        android:layout_width="120dp"
                        android:layout_height="107dp">
                        android:background="@drawable/border_imageview"

                        <ImageView
                            android:layout_width="119dp"
                            android:layout_height="106dp"
                            android:scaleType="centerCrop"
                            android:adjustViewBounds="true"
                            android:layout_centerInParent="true"
                            android:background="@drawable/company_building"
                            android:id="@+id/logo_company" />

                        <ImageView
                            android:padding="0dp"
                            android:layout_margin="5dp"
                            android:layout_gravity="right|top"
                            android:visibility="visible"
                            android:id="@+id/iv_reciclapp_aprobed"
                            android:background="@drawable/circle_image_green_off"

                            android:adjustViewBounds="true"
                            android:src="@drawable/ic_action_tick"
                            android:layout_width="30dp"
                            android:layout_height="30dp" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_gravity="top"
                    android:paddingLeft="0dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="4dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:padding="0dp"
                            android:layout_marginLeft="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/primary_text"
                            android:text="@string/name_company"
                            android:textSize="@dimen/primary_text"
                            android:textStyle="bold"
                            android:id="@+id/tv_name_company" />

                        <TextView
                            android:padding="0dp"
                            android:layout_marginLeft="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/secondary_text"
                            android:text="@string/addres_company"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:textSize="14dp"
                            android:id="@+id/tv_detail_company" />
                        <View
                            android:visibility="visible"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_margin="3dp"
                            android:background="@color/primary_light"/>

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:src="@drawable/ic_action_coffee"
                                android:layout_width="18dp"
                                android:layout_height="18dp" />

                            <TextView
                                android:padding="0dp"
                                android:layout_marginLeft="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/secondary_text"
                                android:text="Lu. - Vi. "
                                android:maxLines="2"
                                android:textSize="@dimen/aux_text"
                                android:id="@+id/tv_l_m" />
                        </LinearLayout>
                        <TextView
                            android:padding="0dp"
                            android:layout_marginLeft="23dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="2"
                            android:textColor="@color/secondary_text"
                            android:text="Sa. - Do. - Fe. "
                            android:textSize="@dimen/aux_text"
                            android:id="@+id/tv_s_d_f" />
                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:src="@drawable/ic_action_phone_start"
                                android:layout_width="17dp"
                                android:layout_height="17dp" />

                            <TextView
                                android:padding="0dp"

                                android:layout_marginLeft="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/secondary_text"
                                android:text="941720994 - 3893545"
                                android:textSize="@dimen/aux_text"
                                android:id="@+id/tv_phone" />
                        </LinearLayout>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:padding="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/primary_light"/>


                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:padding="5dp"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/tv_we_recycle"
                                android:text="Reciclamos: "
                                android:textColor="@color/primary_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <android.support.v7.widget.RecyclerView
                                android:padding="2dp"
                                android:id="@+id/list_item_recycling"
                                android:layout_width="190dp"
                                android:orientation="horizontal"
                                android:layout_height="55dp">
                            </android.support.v7.widget.RecyclerView>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:padding="5dp"
                            android:layout_gravity="center_vertical"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:gravity="right"
                                android:visibility="gone"
                                android:id="@+id/layout_like"
                                android:layout_gravity="right"
                                android:orientation="horizontal"
                                android:layout_weight="1"
                                android:layout_marginBottom="2dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_marginLeft="0dp"
                                    android:layout_marginTop="0dp"
                                    android:textSize="@dimen/primary_text"
                                    android:text="2949"
                                    android:id="@+id/tv_num_likes"
                                    android:padding="5dp"
                                    android:textStyle="bold"
                                    android:textColor="@color/text_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <ImageView
                                    android:layout_marginLeft="0dp"
                                    android:padding="0dp"

                                    android:layout_centerInParent="true"
                                    android:adjustViewBounds="true"
                                    android:src="@drawable/ic_action_heart_red"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp" />


                            </LinearLayout>


                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:padding="5dp"
            android:layout_gravity="bottom|right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:padding="5dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_action_heart_red"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>